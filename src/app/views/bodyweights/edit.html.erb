</br>

<div class="form-box1">
  <div class="box-inner">
    <h5>体重記録</h5><br>
    <%= form_with(model: @body_weight, url: user_bodyweight_path(@user, @body_weight, start_date: params[:start_date], start_time: params[:start_time]), method: :patch, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :body_weight, class: "label-form" %><a style="color: red; margin-left: 5px;">*入力必須</a>
      <%= f.number_field :body_weight, step: '0.1', class: "form-control" %><br>
      
      <%= f.submit "更新", class: "btn btn-md btn-original btn-block" %>
    <% end %>
  </div>
</div>