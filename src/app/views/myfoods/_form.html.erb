<%= f.number_field :protein, step: '0.1', :placeholder => "たんぱく質", class: "form-control", id: 'protein' %><br>

<%= f.label :fat, class: "label-form" %>
<%= f.number_field :fat, step: '0.1', :placeholder => "脂質", class: "form-control", id: 'fat' %><br>

<%= f.label :carbo, class: "label-form" %>
<%= f.number_field :carbo, step: '0.1', :placeholder => "炭水化物", class: "form-control", id: 'carbo' %><br>

