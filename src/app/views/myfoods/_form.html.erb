<%= f.label :sugar, class: "label-form" %>
<%= f.number_field :sugar, step: '0.1', :placeholder => "糖質", class: "form-control" %><br>

<%= f.label :dietary_fiber, class: "label-form" %>
<%= f.number_field :dietary_fiber, step: '0.1', :placeholder => "食物繊維", class: "form-control" %><br>

<%= f.label :salt, class: "label-form" %>
<%= f.number_field :salt, step: '0.1', :placeholder => "塩分", class: "form-control" %><br>
  