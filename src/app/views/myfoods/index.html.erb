  <br>
  <div class="row">
    <div class="mx-auto">
      <div class="fuzzy_search">
      <%= form_with(url: user_myfoods_path, method: :get, local: true) do |f| %>
        <%= f.text_field :search, placeholder: "食品名を入力" %>
