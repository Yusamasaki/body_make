
<ul class="nav nav-fill justify-content-center" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link" href="<%= user_recipes_path(@user, timezone_id: params[:timezone_id], start_time: params[:start_time], start_date: params[:start_date]) %>"><i class="fas fa-undo-alt">戻る</i></a>
  </li>
</ul>

<div class="form-box1">
  <div class="box-inner">
    <div class="title-layout"><span>レシピ追加</span></div><br>
    <%= form_with(model: @recipe, url: user_recipes_path(@user, timezone_id: params[:timezone_id], start_date: params[:start_date], start_time: params[:start_time]), method: :post, local: true) do |f| %>
      
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :recipe_name, class: "label-form" %><br>
      <%= f.text_field :recipe_name, class: "form-control" %><br>
      
      <%= f.submit "新規作成", class: "btn btn-md btn-original btn-block" %>
    <% end %>
  </div>
</div>