
<div class="context">
  <h1>BODY MAKE APP</h1>
</div>

<div class="area">
  <ul class="circles">
    <li></li>
    <li></li>
    <li></li>
    <li></li>
    <li></li>
    <li></li>
    <li></li>
    <li></li>
    <li></li>
    <li></li>
  </ul>
</div>

<div class="bg_pattern Paper_v2"></div>
  <div class="section">
    <div class="form-box1">
      <div class="box-inner">
        <% flash.each do |message_type, msg| %>
          <div class="alert alert-danger center"><%= msg.html_safe %></div>
        <% end %>
        <h6><span>通常ログイン</span></h6>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="box-email">
            <%= f.label :email, "Eメール" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="box-password">
            <div class="a-row">
              <div class="column-left">
                <%= f.label :password, "パスワード" %>
              </div>
              <!--<div class="column-right">-->
              <!--  <= link_to "パスワードを忘れた場合", new_user_password_path %>-->
              <!--</div>-->
            </div>
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div><br />

          <div class="box-action">
            <%= f.submit "ログイン", class: "btn btn-md btn-outline-original btn-block" %><br>
            
          </div>
        <% end %>

        <div>
          <h6><span>SNSログイン</span></h6>
          <%= link_to(user_google_oauth2_omniauth_authorize_path, class: "btn btn-md btn-outline-original btn-block") do %>
            <i class="fab fa-google"></i>  Sign in with Google
          <% end %>

          <%= link_to(user_facebook_omniauth_authorize_path, class: "btn btn-md btn-original btn-block") do %>
            <i class="fab fa-facebook"></i>  Sign in with Facebook
          <% end %>
        </div>
        <br>
        <h6><span>アカウントを作成</span></h6>
        <%= link_to "アカウントを作成", new_user_registration_path, class: "btn btn-md btn-outline-primary btn-block" %><br>
        
        <h6><span>管理ユーザーログイン</span></h6>
        <%= link_to "管理ユーザー", new_admin_session_path, class: "btn btn-md btn-outline-secondary btn-block" %>
      </div>
    </div>
  </div>
</div>
